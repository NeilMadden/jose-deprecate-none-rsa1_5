  "pulls": [
    {
      "number": 6,
      "id": "PR_kwDOLfzqsM6P3EI9",
      "title": "Updates suggested by Yaron Sheffer's review",
      "url": "https://github.com/NeilMadden/jose-deprecate-none-rsa1_5/pull/6",
